@using StretchCeilingProject.Common
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="wimageIdth=device-wimageIdth" />
    <title>DefaultLayout</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/commonStyleSheet.css" rel="stylesheet" />
</head>
<body>

    <header>
        <div>
            <div class="logo col-xs-2">
                logo
            </div>

            <div class="contactPhone col-xs-2 col-xs-offset-8">
                12-34-56
            </div>
        </div>

        <ul class="nav nav-pills mainMenu col-xs-9 col-xs-offset-3">
            <li role="presentation" data-name="main" class="active">@Html.ActionLink("Главная", "Index", "Home")</li>
            <li role="presentation" data-name="price">@Html.ActionLink("Цены", "Price", "Home")</li>
            <li role="presentation" data-name="description">@Html.ActionLink("Описание", "Description", "Home")</li>
            <li role="presentation" data-name="contacts">@Html.ActionLink("Контакты", "Contacts", "Home")</li>
        </ul>
    </header>

    <div class="col-xs-12">
        <div id="myCarousel" class="carousel slimageIde" data-rimageIde="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slimageIde-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slimageIde-to="1"></li>
                <li data-target="#myCarousel" data-slimageIde-to="2"></li>
                <li data-target="#myCarousel" data-slimageIde-to="3"></li>
            </ol>

            <!-- Wrapper for slimageIdes -->
            <div class="carousel-inner" role="listbox">
                
                @foreach (var id in Constant.CarouselImagesIds)
                {
                    <div class="item">
                        <img src="@Html.Action("Get", "Image", new {id = id})" alt="carouselImage">
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slimageIde="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-himageIdden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slimageIde="next">
                <span class="glyphicon glyphicon-chevron-right" aria-himageIdden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    @RenderBody()

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/commonJavaScript.js"></script>
</body>
</html>