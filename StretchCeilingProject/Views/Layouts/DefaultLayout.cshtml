@using StretchCeilingProject.Common
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DefaultLayout</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/commonStyleSheet.css" rel="stylesheet" />
</head>
<body>

    <header class="col-lg-6 col-lg-offset-3 col-md-12 clearfix">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Телефон: 12-34-56</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li data-name="main" class="active">@Html.ActionLink("Главная", "Index", "Home")</li>
                        <li data-name="price">@Html.ActionLink("Цены", "Price", "Home")</li>
                        <li data-name="description">@Html.ActionLink("Описание", "Description", "Home")</li>
                        <li data-name="contacts">@Html.ActionLink("Контакты", "Contacts", "Home")</li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </header>

    <div class="col-lg-6 col-lg-offset-3 col-md-12 hidden-xs clearfix">
        <div id="myCarousel" class="carousel slimageIde" data-rimageIde="carousel">
            <!-- Wrapper for slimageIdes -->
            <div class="carousel-inner" role="listbox">

                @foreach (var imageId in Constant.CarouselImagesIds)
            {
                    <div class="item col-xs-6 col-xs-offset-3">
                        <img src="@Url.Action("Get", "Image", new {imageId = imageId})" alt="carouselImage">
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slimageIde="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-himageIdden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="right carousel-control" href="#myCarousel" role="button" data-slimageIde="next">
                <span class="glyphicon glyphicon-chevron-right" aria-himageIdden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <article class="col-lg-6 col-lg-offset-3 col-md-12 clearfix">
        @RenderBody()
    </article>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/commonJavaScript.js"></script>
</body>
</html>